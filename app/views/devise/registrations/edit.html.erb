<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-horizontal' }) do |f| %>
  <%= devise_error_messages! %>

    <%= f.input :firstn , label: "New Fist Name"%>

    <%= f.input :lastn , label: "New Last Name" %>
    <%= f.input :email %>
    <%=  f.input :type, label: "User Type",  as: :radio_buttons , collection: ["Consultant", "Business"] %>
    <%= f.input :addressl2,  label: "Address" %>
    <%=  f.input :addressl2, label: "Address line 2" %>
    <%=  f.input :city %>
    <%=  f.input :state %>
    <%=  f.input :zip %>
    <%= f.input :password, label:"New Password", autocomplete:"off" %>
    <%= f.input :password_confirmation, label: "New Password Confirmation", autocomplete:"off"  %>
    <%= f.input :current_password %>
    <div class="form-actions">
        <%= f.submit "Update" %></div>
    <% end %>

<h2>Cancel my account</h2>

<%= button_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %>

<%= link_to "Back", :back %>
