
<h2>Sign up</h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name) , :html => {:class => 'form-horizontal' }) do |f| %>
<%= devise_error_messages! %>


 <%= f.input :firstn, label: "First Name" %>

 <%= f.input :lastn, label: "Last Name"%>
 <%=  f.input :type, label: "User Type",  as: :radio_buttons , collection: ["Consultant", "Business"] %>
 <%= f.input :email %>


 <%= f.input :addressl2,  label: "Address" %>
 <%=  f.input :addressl2, label: "Address line 2" %>
 <%=  f.input :city %>
 <%=  f.input :state %>
 <%=  f.input :zip %>


 <%= f.input :password %>
 <%= f.input :password_confirmation %>
 <%= f.input :remember_me, as: :boolean %>

  <div class=" button form-actions">
    <%= f.submit "Sign up" %>
  </div>
    <%= render "devise/shared/links" %>
<% end %>


